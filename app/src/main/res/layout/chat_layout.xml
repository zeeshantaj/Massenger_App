<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textAlignment="center"
        android:id="@+id/messageSendTime"
        android:layout_toEndOf="@id/received_chat_layout"
        android:layout_toStartOf="@id/sendder_chat_layout"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/received_chat_layout"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/messageSendTime"
            android:layout_alignParentStart="true"
            android:background="@drawable/receriver_chat_node">
            <TextView
                android:id="@+id/received_chat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginStart="15dp"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/sendder_chat_layout"
            android:layout_marginEnd="6dp"
            android:layout_below="@id/messageSendTime"
            android:layout_alignParentEnd="true"
            android:background="@drawable/sender_chat_node">
            <TextView
                android:id="@+id/sender_chat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginStart="15dp"
                android:textSize="18sp"/>
        </LinearLayout>
</RelativeLayout>