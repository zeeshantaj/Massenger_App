<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!--            <solid android:color="#88FBFBFB" /> &lt;!&ndash; Semi-transparent grey color &ndash;&gt;-->
            <solid android:color="@android:color/transparent" />
            <corners android:radius="90dp"/>
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <!--            <solid android:color="@android:color/transparent" /> &lt;!&ndash; Transparent color when not pressed &ndash;&gt;-->
            <solid android:color="#2DFBFBFB" /> <!-- Semi-transparent grey color -->
            <corners android:radius="90dp"/>
        </shape>
    </item>
</selector>